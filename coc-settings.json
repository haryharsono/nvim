{
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/evl/rescript-vscode/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "reason": {
      "command": "~/.local/bin/reason-language-server",
      "filetypes": ["reason"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "sh.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "👿",
  "diagnostic.warningSign": "⚠️",
  "diagnostic.infoSign": "ℹ️",
  "diagnostic.hintSign": "👀",
  "codeLens.enable": true,
  "suggest.snippetIndicator": "~>",
  "coc.preferences.formatOnSaveFiletypes": [
    "bash",
    "shell",
    "zsh",
    "reason",
    "rescript",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "json",
    "java",
    "yaml"
  ],
   "eslint.autoFixOnSave": true,
   "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact","java"],
  "java.referencesCodeLens.enabled": true,
  "java.jdt.ls.vmargs": "-javaagent:/usr/local/share/lombok/lombok.jar",
  "java.configuration.runtimes": [
  {
    "name": "graalvm-ce-java17-21.0.0",
    "path": "/usr/lib/jvm/graalvm-ce-java17-21.3.0"
  }
  ]
}

